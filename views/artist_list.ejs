<%- include("layout/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<% message.type %> " role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>

                        <div class="table-responsive">
                            <% if (artists !='' ) { %>
                                <table class="table table-striped text-start">
                                    <thead>
                                        <tr class="table-dark">
                                         
                                            <th>Artists</th>
                                            <th>Date of Birth</th>
                                            <th>Songs</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% artists.forEach((row, index)=> { %>
                                            <tr>
            
                                                <td>
                                                    <%= row.a_name %>
                                                </td>
                                                <td>
                                                    <%= row.Dob %>
                                                </td>
                                                <td>
                                                    <%= row.bio %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else{ %>
                                    <h1 class="text-center text-secondary mt-5">no songs</h1>
                                    <% } %>
                        </div>
            </div>
        </div>
    </div>
    <%- include("layout/footer") %>