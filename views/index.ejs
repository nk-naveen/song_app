<%- include("layout/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<% message.type %> " role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (songs !='' ) { %>
                                <table class="table table-striped text-start">
                                    <thead>
                                        <tr class="table-dark">
                                            <!-- <th>ID</th> -->
                                            <th>Artwork</th>
                                            <th>Song Name</th>
                                            <th>Date of release</th>
                                            <th>Artists</th>
                                            <th>Rating</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% songs.forEach((row, index)=> { %>
                                            <tr>
                                                <!-- <td><%= index %> </td> -->
                                                <td><img src="<%= row.image %> " width="100" class="img-thumbnail"></td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.Dor %>
                                                </td>
                                                <td>
                                                    <%= row.Artists %>
                                                </td>
                                                <td></td>
                                                <td><a href="/edit/<%= row._id %> " class="text-success">
                                                        <i class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %> " class="text-success">
                                                        <i class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else{ %>
                                    <h1 class="text-center text-secondary mt-5">no songs</h1>
                                    <% } %>
                        </div>
                       
            </div>
        </div>
    </div>
    <%- include("layout/footer") %>