<%- include("layout/header1") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-sucess">
                        <h3 class="text-dark">Edit song(<%= song.name %>) </h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= song._id %> " method="post" id="add-form"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label> <input type="text" name="name"
                                    class="form-control form-control-19" value="<%= song.name %>"
                                    placeholder="Enter name" required />
                            </div>
                            <div class="mb-3">
                                <label for="date">Date of release</label>
                                <input type="Date" name="Dor" class="form-control form-control-19"
                                    value="<%= song.Dor %>" placeholder="Select Date" required />
                            </div>
                            <div class="mb-3">
                                <label for="artists">Artists</label>
                                <input type="text" list="accounts" name="Artists" value="<%= song.Artists %>"
                                    class="form-control form-control-lg" placeholder="select artist" required />
                                <datalist id="accounts">
                                    <option value="Transport" />
                                    <option value="Food" />
                                </datalist>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input class="form-control form-control-lg" type="file" name="image" />
                                <img src="/<%= song.image %> " width="100" class="img-thumbnail mt-1">
                            </div>
                            <input type="hidden" name="old_image" value="<%= song.image %>" />
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="update User" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("layout/footer") %>